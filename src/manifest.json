{
  "manifest_version": 3,
  "name": "WikiSwitcher",
  "version": "1.0.0",
  "description": "Chooses the Wikipedia page which has the best article among the users' selected languages",
  "author": "bryan.kaperick@gmail.com",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "WikiSwitcher",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
        "matches": ["*://*.wikipedia.org/wiki/*"],
        "js": ["content.js"]
    }
  ]
}
